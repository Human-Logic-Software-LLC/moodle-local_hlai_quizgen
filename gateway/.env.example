# Azure OpenAI Configuration (for grading and quiz generation)
# Get these from your Azure OpenAI resource in the Azure Portal
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_DEPLOYMENT=gpt-4o-mini
AZURE_API_VERSION=2024-02-01
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here

# Gateway API Key for Moodle Plugin Authentication
# Generate a secure random key and use the same in Moodle plugin settings
# Example: openssl rand -hex 32
GATEWAY_API_KEY=your_secure_gateway_api_key_here

# Optional: Multiple API keys (comma-separated)
# Use this if you want to support multiple Moodle installations or customers
# GATEWAY_API_KEYS=key1,key2,key3

# Optional: Override gateway URL for local development
# Leave commented out for production
# HL_GATEWAY_URL=http://localhost:8000

# Flask Configuration
PORT=8000
FLASK_DEBUG=False

# Optional: Enable safe prompts mode (softens strict language)
# Set to True to make AI responses more gentle
SAFE_PROMPTS=False
